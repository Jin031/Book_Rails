<h1>Books</h1>
<table> <thead>
  <tr> <th>Title</th> <th>Body</th> <th colspan="3"></th>
 </tr>
 </thead>

  <tbody>
    <% @books.each do |book| %>
  <tr>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
    <td><span><%= link_to "show", "/books/#{book.id}" %></span></td>
    <td><%= link_to "edit", edit_book_path(book.id) %></td>
    <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  </tr>
 <% end %>
  </table>
  </body>
</html>


  <h1>New book</h1>

  <% if @book.errors.any? %>
   <%= @book.errors.count %> errors prohibited this book from being saved
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>











